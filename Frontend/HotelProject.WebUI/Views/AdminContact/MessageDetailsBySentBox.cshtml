@model GetMessageByIdDto 
@{
	ViewData["Title"] = "MessageDetailsBySentBox";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<style>
	.message-img {
		width: 50px;
		height: 50px;
		object-fit: cover;
	}
</style>
<div class="email-left-box">
	<a href="/AdminContact/AddSendMessage" class="btn btn-primary btn-block">Bəstələmək</a>
	@await Component.InvokeAsync("_InboxPartial")
	<h5 class="mt-5 m-b-10">Kateqoriyalar</h5>
	@await Html.PartialAsync("AdminContactCategoryPanePartial")
</div>
<div class="email-right-box">
	<div role="toolbar" class="toolbar">
		<div class="btn-group">
			<button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
				Daha çox <span class="caret m-l-5"></span>
			</button>
			<div class="dropdown-menu">
				<a class="dropdown-item" href="javascript: void(0);">Oxunmamış kimi işarələ</a>
				<a class="dropdown-item" href="javascript: void(0);">Tapşırıqlara əlavə et</a>
				<a class="dropdown-item" href="javascript: void(0);">Ulduzla</a>
				<a class="dropdown-item" href="javascript: void(0);">Susdur</a>
			</div>
		</div>
	</div>

	<div class="read-content">
		<div class="media pt-5">
			<img class="message-img mr-3 rounded-circle" src="/adminweb/images/avatar/hotel-sample-logo.png">
			<div class="media-body">
				<h5 class="m-b-3">@Model.SenderName</h5>
				<p class="m-b-2">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</p>
			</div>

		</div>
		<hr>
		<div class="media mb-4 mt-1">
			<div class="media-body">
				<span class="float-right">@(((DateTime)Model.Date).ToString("HH:mm"))</span>
				<h4 class="m-0 text-primary">@Model.Title</h4><small class="text-muted">Kimə:@Model.ReceiverMail</small>
			</div>
		</div>
		<h5 class="m-b-15">Salam,@Model.ReceiverName</h5>
		<p>@Model.Content</p>
	
		
		<h5 class="m-b-5 p-t-15">Hörmətlə,</h5>
		<p>Hotelier Dəstək</p>
		<hr>
		<h6 class="p-t-15"><i class="fa fa-download mb-2"></i> Attachments <span>(3)</span></h6>
		<div class="row m-b-30">
			<div class="col-auto">
				<a href="#" class="text-muted">My-Photo.png</a>
			</div>
			<div class="col-auto">
				<a href="#" class="text-muted">My-File.docx</a>
			</div>
			<div class="col-auto">
				<a href="#" class="text-muted">My-Resume.pdf</a>
			</div>
		</div>
		<hr>
		@*<div class="form-group p-t-15">
			<textarea class="w-100 p-20 l-border-1" name="" id="" cols="30" rows="5" placeholder="It's really an amazing.I want to know more about it..!"></textarea>
		</div>*@
	</div>
	</div>

