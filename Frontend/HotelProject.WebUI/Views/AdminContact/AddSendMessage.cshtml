@model CreateSendMessageDto
@{
    ViewData["Title"] = "AddSendMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<div class="email-left-box">
						<a href="email-compose.html" class="btn btn-primary btn-block">Bəstələmək</a>
						@await Component.InvokeAsync("_InboxPartial")
						<h5 class="mt-5 m-b-10">Kateqoriyalar</h5>
						@await Html.PartialAsync("AdminContactCategoryPanePartial")
					</div>
					<div class="email-right-box">
						<div class="toolbar" role="toolbar">
							<div class="btn-group m-b-20">
								<button type="button" class="btn btn-light">
									<i class="fa fa-archive"></i>
								</button>
								<button type="button" class="btn btn-light">
									<i class="fa fa-exclamation-circle"></i>
								</button>
								<button type="button" class="btn btn-light">
									<i class="fa fa-trash"></i>
								</button>
							</div>
							<div class="btn-group m-b-20">
								<button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
									<i class="fa fa-folder"></i>  <b class="caret m-l-5"></b>
								</button>
								<div class="dropdown-menu">
									<span class="dropdown-header">Move to</span>  <a class="dropdown-item" href="javascript: void(0);">Social</a>  <a class="dropdown-item" href="javascript: void(0);">Promotions</a>  <a class="dropdown-item" href="javascript: void(0);">Updates</a>
									<a class="dropdown-item" href="javascript: void(0);">Forum</a>
								</div>
							</div>
							<div class="btn-group m-b-20">
								<button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
									<i class="fa fa-tag"></i>  <b class="caret m-l-5"></b>
								</button>
								<div class="dropdown-menu">
									<span class="dropdown-header">Etiketlə</span>  <a class="dropdown-item" href="javascript: void(0);">Updates</a>  <a class="dropdown-item" href="javascript: void(0);">Social</a>  <a class="dropdown-item" href="javascript: void(0);">Promotions</a>
									<a class="dropdown-item" href="javascript: void(0);">Forum</a>
								</div>
							</div>
							<div class="btn-group m-b-20">
								<button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
									Daha çox <span class="caret m-l-5"></span>
								</button>
								<div class="dropdown-menu">
									<a class="dropdown-item" href="javascript: void(0);">Oxunmamış kimi işarələ</a>  
									<a class="dropdown-item" href="javascript: void(0);">Tapşırıqlara əlavə et</a>  
									<a class="dropdown-item" href="javascript: void(0);">Ulduzla</a>  
									<a class="dropdown-item" href="javascript: void(0);">Susdur</a>
								</div>
							</div>
						</div>

						<div class="compose-content mt-5">
							<form method="post">
								<div class="form-group">
									<input asp-for="ReceiverMail" class="form-control bg-transparent" placeholder="Kimə">
								</div>
								<div class="form-group">
									<input asp-for="Title" class="form-control bg-transparent" placeholder="Mövzu">
								</div>
								<div class="form-group">
									<input asp-for="ReceiverName" class="form-control bg-transparent" placeholder="Alıcı adı">
								</div>
								<div class="form-group">
									<textarea asp-for="Content" class="textarea_editor form-control bg-light" rows="15" placeholder="Mətn yazın ...."></textarea>
								</div>
							<h5 class="m-b-20"><i class="fa fa-paperclip m-r-5 f-s-18"></i> Fayl əlavə edin...</h5>
						<div class="text-left m-t-15">
							<button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" ><i class="fa fa-paper-plane m-r-5"></i>Göndər</button>
							<button class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20" ><i class="ti-close m-r-5 f-s-12"></i>Ləğv et</button>
						</div>
							</form>
							@*<form action="#" class="dropzone">
								<div class="form-group">
									<div class="fallback">
										<input class="l-border-1" name="file" type="file" multiple="multiple">
									</div>
								</div>
							</form>*@
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

