@model List<InboxContactDto> 
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<style>
	.empty-box {
		display: flex;
		justify-content: center;
		align-items: center;
		font-size: 30px;
		text-align: center;
		margin-top:100px;
		
	}
</style>
<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<div class="email-left-box">
				<a href="/AdminContact/AddSendMessage" class="btn btn-primary btn-block">Bəstələmək</a>
				@await Component.InvokeAsync("_InboxPartial")
				<h5 class="mt-5 m-b-10">Kateqoriyalar</h5>
				@await Html.PartialAsync("AdminContactCategoryPanePartial.cshtml")
			</div>
			<div class="email-right-box">
				<div role="toolbar" class="toolbar">
					<div class="btn-group">
						<button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
							Daha çox <span class="caret m-l-5"></span>
						</button>
						<div class="dropdown-menu">
							<a class="dropdown-item" href="javascript: void(0);">Oxunmamış kimi işarələ</a>
							<a class="dropdown-item" href="javascript: void(0);">Tapşırıqlara əlavə et</a>
							<a class="dropdown-item" href="javascript: void(0);">Ulduzla</a>
							<a class="dropdown-item" href="javascript: void(0);">Susdur</a>
						</div>
					</div>
				</div>
				<div class="email-list m-t-15">

					@if (Model.Count() == 0)
					{
						<div class="message">
							<div class="empty-box col-mail col-mail-2">
								<div class="subject">Mesaj qutusu boşdur</div>
							</div>
						</div>
							}
							@foreach (var item in Model)
							{

								<div class="message">
									<a href="/AdminContact/MessageDetailsByInbox/@item.ContactID">
										<div class="col-mail col-mail-1">
											<div class="email-checkbox">
												<input type="checkbox" id="chk2">
												<label class="toggle" for="chk2"></label>
											</div><span class="star-toggle ti-star"></span>
										</div>
										<div class="col-mail col-mail-2">
											<div class="subject">@((item.Message) ?? "Mesaj qutusu boşdur") </div>
											<div class="date">@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</div>
										</div>
									</a>
								</div>
								<div class="row">
									<div class="col-7">
										<div class="text-left">1 - 20 of 568</div>
									</div>
									<div class="col-5">
										<div class="btn-group float-right">
											<button class="btn btn-gradient" type="button">
												<i class="fa fa-angle-left"></i>
											</button>
											<button class="btn btn-dark" type="button">
												<i class="fa fa-angle-right"></i>
											</button>
										</div>
									</div>
								</div>
							}
						</div>
						<!-- panel -->
					</div>
		</div>
	</div>
</div>

