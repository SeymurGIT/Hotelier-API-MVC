@model List<ResultServiceDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Xidmət başlığı</th>
		<th>Sil</th>
		<th>Yenilə</th>
		
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.ServiceId</td>
			<td>@item.Title</td>
			
			<td>
				<a href="/Service/DeleteService/@item.ServiceId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a>

			</td>
			<td>
				<a href="/Service/UpdateService/@item.ServiceId" class="btn mb-1 btn-rounded btn-outline-success">Yenilə</a>

			</td>
			
		</tr>
	}
</table>
<a href="/Service/AddService" class="btn mb-1 btn-rounded btn-outline-info">Yeni xidmət əlavə et</a>

