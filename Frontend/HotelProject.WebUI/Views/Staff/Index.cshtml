@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İşçi Adı</th>
        <th>İşçi Vəzifəsi</th>
        <th>Sil</th>
        <th>Yenilə</th>
        <th>Detallar</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.StaffId</td>
                    <td>@item.Name</td>
                    <td>@item.Title</td>
                    <td>
                        <a href="/Staff/DeleteStaff/@item.StaffId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a> 
                        
                    </td>
                    <td>    
                        <a href="/Staff/UpdateStaff/@item.StaffId" class="btn mb-1 btn-rounded btn-outline-success">Yenilə</a>

                    </td>
                    <td>
                        <a href="/AdminUsers/Index/" class="btn mb-1 btn-rounded btn-outline-dark">Detallar</a>
                        
                    </td>

					
                </tr>
            }
</table>
<a href="/Staff/AddStaff" class="btn mb-1 btn-rounded btn-outline-info">Yeni İşçi Əlavə Et</a>
