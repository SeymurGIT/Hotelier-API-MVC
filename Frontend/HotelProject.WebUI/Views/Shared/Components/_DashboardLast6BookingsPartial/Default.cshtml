@model List<HotelProject.WebUI.Dtos.BookingDto.ResultLast6BookingsDto>
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<div class="active-member">
					<div class="table-responsive">
						<table class="table table-xs mb-0">
							<thead>
								<tr>
									<th>Müştəri</th>
									<th>Lokasiya</th>
									<th>Giriş və Çıxış Tarixləri</th>
									<th style="text-align:center" colspan="2">Vəziyyət</th>
									<th>Məlumat</th>
									<th style="text-align:center">Aktivlik</th>
								</tr>
							</thead>
							<tbody>
								@foreach(var item in Model)
			{
								<tr>
									<td>@item.Name</td>
									<td>@(item.UserLocation ?? "Boş")  </td>
									<td>
										<span>Giriş: @item.CheckIn.ToString("dd-MMM-yyyy HH:mm")</span>
										<br />
										<span>Çıxış: @item.CheckOut.ToString("dd-MMM-yyyy HH:mm")</span>
									</td>
									<td>
										<div>
											<div class="progress" style="height: 7px">
												<div class="progress-bar bg-success" style="width:40px"></div>
											</div>
										</div>
									</td>
									<td><i class="fa fa-circle-o text-success  mr-2"></i> Paid</td>
									<td>
										<span>Yetişkin: @item.AdultCount</span>
										<br />
										<span>Uşaq sayı: @item.ChildCount</span>
										<br />
										<span>Otaq sayı: @item.RoomCount</span>
									</td>
									<td>
										<span class="m-0 pl-3">10 saniyə əvvəl</span>
									</td>
								</tr>
			}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>