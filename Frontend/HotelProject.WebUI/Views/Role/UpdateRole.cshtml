@model UpdateRoleViewModel
@{
	ViewData["Title"] = "Rol Yeniləmə";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="card-body">
	<h4 style="font-size:25px" class="card-title mb-4">Rol yeniləmə formu</h4>
	<div class="basic-form">
		<form method="post">
			<input type="hidden" asp-for="RoleID" />

			<br />
			<div class="form-group row">
				<!-- Label for the input field -->
				<label class="col-sm-2 col-form-label">Yeni Rol Adı:</label>

				<!-- Input field -->
				<div class="col-sm-8">
					<input type="text" asp-for="RoleName" class="form-control" placeholder="Rol Adı...">
				</div>
			</div>
			<br />
			<!-- Submit button with increased width and aligned with the input field -->
			<div class="form-group row">
				<div class="col-sm-10">
					<button type="submit" class="btn btn-secondary" style="width: 120px;">Yenilə</button>
				</div>
			</div>
		</form>
	</div>
</div>
